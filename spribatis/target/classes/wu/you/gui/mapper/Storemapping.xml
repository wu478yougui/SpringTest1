    <select id="queryById" resultType="wu.you.gui.dto.Store" parameterType="int">  
        SELECT  
        UID,  
        USERNAME,  
        PASSWORD  
        FROM Store  
        WHERE UID = #{id}  
    </select>  
      
    <insert id="save" parameterType="wu.you.gui.dto.Store" useGeneratedKeys="true" keyProperty="uid">  
            insert into  
            Store(userName,password) values(#{userName},#{password})   
    </insert>  
      
    <update id="update" parameterType="wu.you.gui.dto.Store">  
        UPDATE Store SET USERNAME=#{userName},PASSWORD=#{password} WHERE UID=#{uid}  
    </update>  
      
    <delete id="delete" parameterType="int">  
        DELETE FROM Store WHERE UID=#{id}  
    </delete>  
      
    <select id="queryAll" resultType="wu.you.gui.dto.Store">  
        SELECT * FROM Store  
    </select>  
</mapper>  